<h1>Burgers!</h1>

<div class="row">


<div class="col">
<h2>Uneaten Burgers!</h2>

<ul style="list-style: none;">
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block  devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="col">
<h2>Devoured Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <p>{{burger_name}}</p>
    {{/if}}
  {{/each}}
</ul>

</div>


</div>
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>


  <button class="btn-success rounded" type="submit">Add Burger</button>
</form>